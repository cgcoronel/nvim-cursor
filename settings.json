{
  // Window & UI
  "window.zoomLevel": 1.6,
  "window.newWindowDimensions": "maximized",
  "window.titleBarStyle": "custom",
  "workbench.navigationControl.enabled": false,
  "workbench.editor.showTabs": "single",
  "workbench.editor.enablePreview": false,
  "workbench.panel.showLabels": false,
  "workbench.statusBar.visible": false,
  "workbench.tree.renderIndentGuides": "none",

  // Editor appearance & behavior
  "editor.fontFamily": "VictorMono Nerd Font",
  "editor.fontSize": 13,
  "editor.lineHeight": 23,
  "editor.letterSpacing": 0.2,
  "editor.fontWeight": "500",
  "editor.guides.indentation": false,
  "editor.glyphMargin": true,
  "editor.overviewRulerBorder": false,
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "phase",
  "editor.smoothScrolling": true,
  "editor.lineNumbers": "on",
  "editor.stickyScroll.enabled": false,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.rulers": [],

  // Terminal
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontWeight": "bold",
  "terminal.integrated.lineHeight": 1.6,
  "terminal.integrated.tabs.location": "left",

  // Breadcrumbs & navigation
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.icons": false,
  "breadcrumbs.symbolPath": "off",
  "zenMode.hideLineNumbers": false,
  "vscode-neovim.neovimInitVimPaths.darwin": "/Users/Cristian/.config/nvim-cursor/init.lua",
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  "vscode-neovim.compositeKeys": {
    "kj": {
      "command": "vscode-neovim.escape"
    }
  },

  // Git & project management
  "projectManager.git.baseFolders": ["/Users/Cristian/projects/xepelin"],
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "never",

  // TypeScript/JavaScript specific
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.enabled": true,
  "typescript.validate.enable": true,
  "typescript.preferences.importModuleSpecifier": "relative",
  "javascript.preferences.includePackageJsonAutoImports": "auto",
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  // AWS/Pulumi specific
  "files.associations": {
    "*.pulumi": "yaml",
    "*.tf": "hcl",
    "*.tfvars": "hcl"
  },
  "yaml.format.enable": true,
  "yaml.validate": true,
  "yaml.schemas": {
    "https://json.schemastore.org/pulumi.json": "**/Pulumi.*.yaml"
  },

  // Performance optimizations
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.pulumi/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.pulumi": true,
    "**/coverage": true
  },
  "files.simpleDialog.enable": true,

  // Node.js development optimizations
  "npm.enableScriptExplorer": true,
  "npm.exclude": "**/node_modules/**",
  "emmet.includeLanguages": {
    "typescript": "html",
    "javascript": "html"
  },

  // Formatters
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.requireConfig": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

 // UI customizations cursor dark midnight
  "workbench.colorCustomizations": {
   "editor.background": "#1a1c21",
   "editorGutter.background": "#1a1c21",
   "breadcrumb.background": "#1a1c21",
  "tab.activeBorderTop": "#25272b",
   "titleBar.border": "#1a1c21",
   "titleBar.activeForeground": "#1a1c21",  
   "tab.border": "#1a1c21",
   "editorLineNumber.activeForeground": "#ffffff",
   "editor.lineHighlightBackground": "#00000000",
   "editor.lineHighlightBorder": "#00000000",
   "panelTitle.activeForeground": "#7b88a1",
   "panelTitle.inactiveForeground": "#7b88a1"
  },

  // Cursor specific
  "cursor.composer.textSizeScale": 1.15,
  "cursor.composer.shouldAutoScrollToBottom": false,

  // Extensions & other
  "extensions.ignoreRecommendations": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "terminal.integrated.tabs.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.colorTheme": "Cursor Dark Midnight"
}
