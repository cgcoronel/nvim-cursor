{
  "window.zoomLevel": 1,
  "window.newWindowDimensions": "maximized",
  "editor.guides.indentation": false, // indentacion codigo
  "editor.glyphMargin": true, // margen barra numero linea
  "editor.scrollbar.horizontal": "hidden", // ocultar barra horizontal
  "editor.scrollbar.vertical": "hidden", // ocultar barra vertical 
  "editor.overviewRulerBorder": false,
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "phase",
  "editor.smoothScrolling": true,
  "editor.lineNumbers": "on", // "relative",
  "editor.fontSize": 13, // 16
  "editor.fontWeight": "500",
  "editor.fontFamily": "VictorMono Nerd Font",
  "editor.lineHeight": 26, // 30
  "editor.stickyScroll.enabled": false,
//   "editor.cursorSurroundingLines": 30,
  "workbench.statusBar.visible": false,
  "workbench.tree.renderIndentGuides": "none",
  "terminal.integrated.fontSize": 13, // 16
  "terminal.integrated.lineHeight": 1.5, //1.4 
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.icons": false,
  "breadcrumbs.symbolPath": "off",
  "zenMode.hideLineNumbers": false,
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1,
    "asvetliakov.vscode-neovim": 1
  },
  "vscode-neovim.neovimInitVimPaths.darwin": "/Users/Cristian/.config/nvim-cursor/init.lua",
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  "vscode-neovim.compositeKeys": {
    "kj": {
      "command": "vscode-neovim.escape",
    },
  },
  "projectManager.git.baseFolders": [
    "/Users/Cristian/projects/xepelin"
  ],
  "git.confirmSync": false,
  "git.autofetch": true,
  "editor.formatOnSave": true,
  "workbench.colorTheme": "Cursor Dark Midnight",
  "window.titleBarStyle": "custom",
  "workbench.colorCustomizations": {
    "editor.background": "#1a1c21",
    "editorGutter.background": "#1a1c21",
    "breadcrumb.background": "#1a1c21",
    //
    "tab.activeBorderTop": "#25272b",
    "titleBar.border": "#1a1c21",
    "tab.border": "#1a1c21",
    //
    "editorLineNumber.activeForeground": "#ffffff", // numero de linea
    //
    "editor.lineHighlightBackground": "#00000000",
    "editor.lineHighlightBorder": "#00000000",
    //
    "panelTitle.activeForeground": "#7b88a1", // texto "Terminal" activo
    "panelTitle.inactiveForeground": "#7b88a1", // texto de otros paneles no activos
  },
  "cursor.composer.textSizeScale": 1.15,
  "workbench.editor.showTabs": "single",
  "cursor.composer.shouldAutoScrollToBottom": false, // "multiple",
  "files.simpleDialog.enable": true,
  "git.openRepositoryInParentFolders": "never",
  
  "editor.rulers": [],
  "editor.wordWrap": "on",
  "prettier.printWidth": 999,
  "[typescript]": {
    "editor.rulers": []
  },
  "[javascript]": {
   "editor.rulers": []
  },
  "workbench.navigationControl.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.enablePreview": false,
  "terminal.integrated.tabs.location":"left",
  "terminal.integrated.scrollback": 100000
}
